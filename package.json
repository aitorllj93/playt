{
  "name": "playt",
  "version": "1.0.0",
  "description": "A powerful prompt templating library and CLI for AI applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "playt": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check src",
    "format": "biome check --write --unsafe src",
    "prepublishOnly": "npm run build",
    "docs:init": "docsify init ./docs",
    "docs:serve": "docsify serve ./docs"
  },
  "keywords": [
    "prompt",
    "template",
    "templating",
    "ai",
    "llm",
    "gpt",
    "claude",
    "openai",
    "nunjucks",
    "markdown",
    "cli",
    "typescript",
    "validation"
  ],
  "author": "Aitor Llamas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aitorllj93/playt.git"
  },
  "bugs": {
    "url": "https://github.com/aitorllj93/playt/issues"
  },
  "homepage": "https://github.com/aitorllj93/playt#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/node": "^20.10.6",
    "@types/nunjucks": "^3.2.6",
    "@vitest/coverage-v8": "^1.6.1",
    "docsify-cli": "^4.4.4",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "gray-matter": "^4.0.3",
    "nunjucks": "^3.2.4"
  }
}
